<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".EmptyPortfolioFragment">

        <View
            android:id="@+id/circle"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/empty_pie_chart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/dividerEmpty"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_marginTop="34dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/circle"/>

        <TextView
            android:id="@+id/addAssetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="98dp"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="35sp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="Your portfolio is empty. \n Add your first asset"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerEmpty"/>

        <Button
            android:layout_width="146dp"
            android:layout_height="48dp"
            android:layout_marginTop="42dp"
            android:text="Add"
            android:textColor="@color/primaryTextColor"
            android:fontFamily="@font/roboto_condensed_bold"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addAssetText"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>