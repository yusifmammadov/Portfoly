<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Portfoly.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
    </style>

    <style name="Widget.Portfoly.ExposedDropdownMenu.Toolbar" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/dropdown_menu_toolbar_box_stroke</item>
        <item name="boxBackgroundColor">@color/dropdown_menu_toolbar_box_stroke</item>
        <item name="endIconMode">dropdown_menu</item>
        <item name="endIconDrawable">@drawable/dropdown_menu_end_icon</item>
        <item name="endIconTint">@color/white</item>
    </style>

    <style name="DropdownMenu.Asset" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="endIconMode">dropdown_menu</item>
    </style>

    <style name="AutoCompleteTextView.Portfoly.Toolbar" parent="">
        <item name="boxStrokeColor">@color/auto_complete_box_stroke</item>
        <item name="android:backgroundTint">@color/auto_complete_box_stroke</item>
        <item name="android:inputType">none</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="Widget.Portfoly.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearanceButton</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_condensed_bold</item>
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
    </style>


    <style name="ShapeAppearanceButton" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">6dp</item>
    </style>

    <style name="ThemeOverlay.Portfoly.MaterialAlertDialog"
        parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="background">@color/background</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.Portfoly.Body.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialAlertDialog.Portfoly.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialAlertDialog.Portfoly.Button</item>
    </style>
    
    <style name="MaterialAlertDialog.Portfoly.Body.Text" 
        parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="MaterialAlertDialog.Portfoly.Button"
        parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="fontFamily">@font/roboto_condensed_regular</item>
    </style>
    
    <style name="Widget.Portfoly.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">

        <item name="materialThemeOverlay">@style/ThemeOverlay.Portfoly.Toolbar</item>
    </style>

    <style name="ThemeOverlay.Portfoly.Toolbar" parent="">
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Widget.Portfoly.Toolbar.Night" parent="Widget.MaterialComponents.Toolbar.Primary">

        <item name="materialThemeOverlay">@style/ThemeOverlay.Portfoly.Toolbar.Night</item>
    </style>

    <style name="ThemeOverlay.Portfoly.Toolbar.Night" parent="">
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
</resources>